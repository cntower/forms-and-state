{
  "extends": "tslint:latest",
  "rulesDirectory": ["./node_modules/codelyzer"],
  "rules": {
    "adjacent-overload-signatures": true,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "member-access": [true, "check-accessor"],
    "member-ordering": [
      true,
      {
        "order": "instance-sandwich"
      }
    ],
    "no-empty-interface": true,
    "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
    "no-internal-module": true,
    "no-namespace": true,
    "no-non-null-assertion": true,
    "no-parameter-reassignment": true,
    "no-reference": true,
    "no-unnecessary-type-assertion": true,
    "no-var-requires": true,
    "only-arrow-functions": [false],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "member-variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,

    "ban": [
      true,
      "eval",
      "$",
      { "name": "window" },
      { "name": ["*", "patchValue"] }
    ],
    "curly": true,
    "forin": true,
    "label-position": true,
    "no-arg": true,
    "no-conditional-assignment": true,
    "no-for-in-array": true,
    "no-inferred-empty-object-type": true,
    "no-object-literal-type-assertion": false,
    "no-submodule-imports": [
      true,
      "@shared",
      "rxjs",
      "core-js",
      "zone.js",
      "@angular"
    ],
    "no-switch-case-fall-through": true,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-use-before-declare": true,
    "no-void-expression": true,
    "object-literal-sort-keys": false,
    "cyclomatic-complexity": [true, 11],
    "deprecation": true,
    "linebreak-style": [false],
    "max-file-line-count": [true, 300],
    "max-line-length": [true, 200],
    "no-default-export": true,
    "no-mergeable-namespace": true,
    "no-require-imports": true,
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "never"
      }
    ],
    "binary-expression-operand-order": true,
    "encoding": true,
    "interface-name": [true, "never-prefix"],
    "match-default-export-name": true,
    "one-variable-per-declaration": [true],
    "no-angle-bracket-type-assertion": false,
    "no-implicit-dependencies": [
      true,
      [
        "@routing.config/undefined",
        "@shared/components",
        "@shared/directives",
        "@shared/pipes",
        "@shared/shared.module",
        "@environment/undefined",
        "@core/undefined",
        "protractor",
        "blue-harvest"
      ]
    ],
    "no-irregular-whitespace": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-qualifier": true,
    "no-bitwise": false,

    "import-destructuring-spacing": true,
    "number-literal-format": true,
    "prefer-method-signature": true,
    "prefer-switch": true,
    "prefer-template": [true, "allow-single-concat"],
    "semicolon": false,
    "space-within-parens": true,
    "switch-final-break": true,
    "quotemark": [true, "double", "avoid-escape"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ],

    "angular-whitespace": [true, "check-interpolation", "check-semicolon"],
    "banana-in-box": true,
    "templates-no-negated-async": true,
    "directive-selector": [true, "attribute", [""], "camelCase"],
    "component-selector": [true, "element", "", "kebab-case"],

    "max-inline-declarations": true,
    "no-life-cycle-call": true,
    "prefer-output-readonly": true,
    "no-conflicting-life-cycle-hooks": true,
    "enforce-component-selector": false,
    "no-queries-parameter": true,
    "prefer-inline-decorator": false,

    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "use-view-encapsulation": true,
    "no-attribute-parameter-decorator": true,
    "no-output-named-after-standard-event": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-output-on-prefix": true,
    "no-forward-ref": false,
    "no-unused-css": false,
    "use-life-cycle-interface": true,
    "contextual-life-cycle": true,

    "trackBy-function": false,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "pipe-impure": true,
    "i18n": [false],
    "template-cyclomatic-complexity": [true, 11],
    "template-conditional-complexity": [true, 10],
    "use-pipe-decorator": true,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ]
  }
}
